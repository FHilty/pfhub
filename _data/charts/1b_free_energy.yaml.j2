---
width: 400
height: 200
axes:
  - type: x
    scale: x
  - type: y
    scale: y
scales:
  - name: x
    nice: true
    type: log
    range: width
    domain: [1, 1000000]
  - name: y
    nice: true
    type: log
    range: height
    domain: [5, 500]
  - name: color
    range: category10
    type: ordinal
    domain:
{%- for datum in data %}
      - {{ datum.name }}
{%- endfor %}
legends:
  - title: Benchmarks
    fill: color
marks:
{%- for datum in data %}
  - type: line
    from:
      data: {{ datum.name }}
    properties:
      enter:
        x:
          scale: x
          field: time
        y:
          scale: y
          field: free_energy
        stroke:
          scale: color
          value: {{ datum.name }}
        strokeWidth:
          value: 2
        strokeOpacity:
          value: 1.0
{%- endfor %}
data:
{{ data | to_yaml() }}
