---
width: 680
height: 200
padding: 0
data:
  - name: images
    values:
{%- for datum in data %}
      - path: "{{ datum.path }}"
        row: {{ datum.row }}
        col: {{ datum.col }}
        link: {{ datum.link }}
        height: 90
        width: 150
{%- endfor %}
scales:
  - name: x
    type: ordinal
    domain:
      data: images
      field: col
    range: width
  - name: y
    type: ordinal
    domain:
      data: images
      field: row
    range: height
marks:
  - name: example
    type: group
    from:
      data: images
    properties:
      enter:
        width:
          band: true
          scale: x
          offset: -5
        height:
          band: true
          scale: y
          offset: -5
        x:
          scale: x
          field: col
        y:
          scale: y
          field: row
        clip:
          value: true
        fill:
          value: #fff
    marks:
      - name: images
        type: image
        properties:
          enter:
            width:
              field:
                parent: width
            height:
              field:
                parent: height
            url:
              field:
                parent: path
            align:
              value: left
            baseline:
              value: center
      - type: rect
        properties:
          enter:
            x:
              value: 0
            y:
              value: 0
            width:
              field:
                group: width
            height:
              field:
                group: height
            stroke: "#000"
            strokeWidth:
              value: 6
          update:
            stroke: "#000"
            strokeWidth:
              value: 10

signals:
  - name: active
    init: ""
    stream:
      - type: "image:mouseover"
        expr: "eventGroup().datum"
      - type: "body:mouseout"
        expr: "{}"
