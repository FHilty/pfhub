{
  "autosize": {
    "resize": false,
    "type": "pad"
  },
  "axes": [
    {
      "domain": false,
      "grid": true,
      "labels": false,
      "orient": "bottom",
      "scale": "x",
      "tickSize": 0,
      "ticks": false
    },
    {
      "domain": false,
      "grid": true,
      "labels": false,
      "orient": "left",
      "scale": "y",
      "tickSize": 0,
      "ticks": false
    },
    {
      "encode": {
        "labels": {
          "update": {
            "font": {
              "value": "Lato"
            },
            "fontSize": {
              "value": 12
            }
          }
        },
        "title": {
          "update": {
            "font": {
              "value": "Lato"
            },
            "fontSize": {
              "value": 14
            }
          }
        }
      },
      "format": ".0e",
      "formatType": "number",
      "labelOverlap": "greedy",
      "orient": "bottom",
      "scale": "x",
      "tickCount": 5,
      "title": "Time"
    },
    {
      "encode": {
        "labels": {
          "update": {
            "font": {
              "value": "Lato"
            },
            "fontSize": {
              "value": 12
            }
          }
        },
        "title": {
          "update": {
            "font": {
              "value": "Lato"
            },
            "fontSize": {
              "value": 14
            }
          }
        }
      },
      "format": ".0e",
      "formatType": "number",
      "labelOverlap": "greedy",
      "orient": "left",
      "scale": "y",
      "tickCount": 5,
      "title": "Free Energy"
    },
    {
      "domain": false,
      "encode": {
        "title": {
          "update": {
            "font": {
              "value": "Lato"
            },
            "fontSize": {
              "value": 20
            }
          }
        }
      },
      "labels": false,
      "orient": "top",
      "scale": "x",
      "ticks": false,
      "title": "Free Energy",
      "titlePadding": 20,
      "values": []
    }
  ],
  "data": [
    {
      "format": {
        "parse": {
          "free_energy": "number",
          "time": "number"
        },
        "type": "csv"
      },
      "name": "prob6",
      "transform": [
        {
          "expr": "datum.time > 0.01",
          "type": "filter"
        }
      ],
      "url": "https://gist.githubusercontent.com/tkphd/93af8ee482b5a66b04ff7284e61ef716/raw/c4b4e8c606a8fe209d7a0ea42e4267f3c53056e2/mmsp_1a_raspi_results.csv"
    },
    {
      "name": "selected",
      "on": [
        {
          "toggle": "clicked",
          "trigger": "clicked"
        }
      ]
    }
  ],
  "height": 300,
  "legends": [
    {
      "encode": {
        "labels": {
          "iteractive": true,
          "name": "legendLabel",
          "update": {
            "font": {
              "value": "Lato"
            },
            "fontSize": {
              "value": 12
            },
            "opacity": [
              {
                "test": "!indata('selected', 'value', datum.value)",
                "value": 1.0
              },
              {
                "value": 0.2
              }
            ]
          }
        },
        "symbols": {
          "interactive": true,
          "name": "legendSymbol",
          "update": {
            "opacity": [
              {
                "test": "!indata('selected', 'value', datum.value)",
                "value": 1.0
              },
              {
                "value": 0.2
              }
            ]
          }
        },
        "title": {
          "update": {
            "font": {
              "value": "Lato"
            },
            "fontSize": {
              "value": 14
            }
          }
        }
      },
      "fill": "color",
      "title": "Simulations"
    }
  ],
  "marks": [
    {
      "encode": {
        "hover": {
          "strokeOpacity": [
            {
              "test": "!indata('selected', 'value', 'prob6')",
              "value": 0.6
            },
            {
              "value": 0.0
            }
          ],
          "strokeWidth": {
            "value": 4
          },
          "tooltip": [
            {
              "test": "!indata('selected', 'value', 'prob6')",
              "value": "prob6"
            },
            {
              "value": ""
            }
          ]
        },
        "update": {
          "stroke": {
            "scale": "color",
            "value": "prob6"
          },
          "strokeOpacity": [
            {
              "test": "!indata('selected', 'value', 'prob6')",
              "value": 1.0
            },
            {
              "value": 0.0
            }
          ],
          "strokeWidth": {
            "value": 3
          },
          "x": {
            "field": "time",
            "scale": "x"
          },
          "y": {
            "field": "free_energy",
            "scale": "y"
          }
        }
      },
      "from": {
        "data": "prob6"
      },
      "interactive": true,
      "type": "line"
    }
  ],
  "scales": [
    {
      "domain": {
        "signal": "xdom"
      },
      "name": "x",
      "nice": false,
      "range": "width",
      "type": "log"
    },
    {
      "domain": {
        "signal": "ydom"
      },
      "name": "y",
      "nice": false,
      "range": "height",
      "type": "log"
    },
    {
      "domain": [
        "prob6"
      ],
      "name": "color",
      "range": {
        "scheme": "category20"
      },
      "type": "ordinal"
    }
  ],
  "signals": [
    {
      "name": "clicked",
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "force": true,
          "update": "{value: datum.value}"
        }
      ],
      "value": null
    },
    {
      "name": "zoom",
      "on": [
        {
          "events": "wheel!",
          "force": true,
          "update": "pow(1.005, event.deltaY * pow(16, event.deltaMode))"
        }
      ],
      "value": 1
    },
    {
      "name": "down",
      "on": [
        {
          "events": "touchend",
          "update": "null"
        },
        {
          "events": "mousedown, touchstart",
          "update": "xy()"
        }
      ],
      "value": null
    },
    {
      "name": "delta",
      "on": [
        {
          "events": [
            {
              "between": [
                {
                  "type": "mousedown"
                },
                {
                  "source": "window",
                  "type": "mouseup"
                }
              ],
              "consume": true,
              "source": "window",
              "type": "mousemove"
            },
            {
              "consume": true,
              "filter": "event.touches.length === 1",
              "type": "touchmove"
            }
          ],
          "update": "down ? [down[0]-x(), y()-down[1]] : [0,0]"
        }
      ],
      "value": [
        0,
        0
      ]
    },
    {
      "name": "xdomlog",
      "on": [
        {
          "events": {
            "signal": "zoom"
          },
          "update": "[xcur[0] - log(zoom), xcur[1] + log(zoom)]"
        },
        {
          "events": {
            "signal": "delta"
          },
          "update": "[xcur[0] + span(xcur) * delta[0] / width, xcur[1] + span(xcur) * delta[0] / width]"
        }
      ],
      "value": [
        -1,
        6
      ]
    },
    {
      "name": "xcur",
      "on": [
        {
          "events": "mousedown, touchstart, touchend, wheel!",
          "update": "[xdomlog[0], xdomlog[1]]"
        }
      ],
      "value": null
    },
    {
      "name": "xdom",
      "update": "[pow(10, xdomlog[0]), pow(10, xdomlog[1])]",
      "value": null
    },
    {
      "name": "ydomlog",
      "on": [
        {
          "events": {
            "signal": "zoom"
          },
          "update": "[ycur[0] - log(zoom) * span(ycur) / span(xcur), ycur[1] + log(zoom) * span(ycur) / span(xcur)]"
        },
        {
          "events": {
            "signal": "delta"
          },
          "update": "[ycur[0] + span(ycur) * delta[1] / height, ycur[1] + span(ycur) * delta[1] / height]"
        }
      ],
      "value": [
        0,
        5
      ]
    },
    {
      "name": "ycur",
      "on": [
        {
          "events": "mousedown, touchstart, touchend, wheel!",
          "update": "[ydomlog[0], ydomlog[1]]"
        }
      ],
      "value": null
    },
    {
      "name": "ydom",
      "update": "[pow(10, ydomlog[0]), pow(10, ydomlog[1])]",
      "value": null
    }
  ],
  "width": 500
}