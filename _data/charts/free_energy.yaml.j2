---
width: 500
height: 300
signal:
  - name: hover
    init: null

axes:
  - orient: bottom
    grid: true
    tickSize: 0
    ticks: false
    labels: false
    domain: false
    scale: x
  - orient: left
    grid: true
    labels: false
    ticks: false
    domain: false
    tickSize: 0
    scale: y
  - orient: bottom
    scale: x
    values: {{ marks.x }}
    format: ".0e"
    formatType: number
    title: "Time"
    encode:
      update:
        title:
          font:
            value: Lato
          fontSize:
            value: 14
        labels:
          font:
            value: Lato
          fontSize:
            value: 12
  - orient: left
    scale: y
    values: {{ marks.y }}
    format: ".0e"
    formatType: number
    title: "Free Energy"
    encode:
      update:
        title:
          font:
            value: Lato
          fontSize:
            value: 14
        labels:
          font:
            value: Lato
          fontSize:
            value: 12
  - orient: top
    scale: x
    title: Free Energy for Benchmark {{ id_ }}
    values: []
    domain: false
    labels: false
    ticks: false
    encode:
      title:
        update:
          fontSize:
            value: 20
          font:
            value: Lato
scales:
  - name: x
    nice: true
    type: log
    range: width
    domain: [{{ marks.x | first }}, {{ marks.x | last }}]
  - name: y
    nice: true
    type: log
    range: height
    domain: [{{ marks.y | first }}, {{ marks.y | last }}]
  - name: color
    range:
      scheme: category20
    type: ordinal
    domain:
{%- for datum in data %}
      - {{ datum.name }}
{%- endfor %}
legends:
  - title: Simulations
    fill: color
    encode:
      title:
        font:
          value: Lato
        fontSize:
          value: 14
      labels:
        font:
          value: Lato
        fontSize:
          value: 12
marks:
{%- for datum in data %}
  - type: line
    from:
      data: {{ datum.name }}
    encode:
      enter:
        x:
          scale: x
          field: time
        y:
          scale: y
          field: free_energy
        stroke:
          scale: color
          value: {{ datum.name }}
        strokeWidth:
          value: 2
        strokeOpacity:
          value: 1.0
{%- endfor %}
data:
{{ data | to_yaml() }}
